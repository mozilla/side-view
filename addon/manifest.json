{
    "manifest_version": 2,
    "name": "Tab Split 2",
    "version": "0.1.0",
    "description": "Open a mobile view of a page in the sidebar",
    "author": "Ian Bicking",
    "homepage_url": "https://github.com/mozilla/tab-split-2",
    "applications": {
      "gecko": {
        "id": "tab-split-2@mozilla.org",
        "strict_min_version": "57.0a1"
      }
    },
    "background": {
      "scripts": [
        "background.js"
      ]
    },
    "sidebar_action": {
      "default_title": "Tab Split",
      "default_panel": "sidebar.html"
    },
    "web_accessible_resources": [
    ],
    "permissions": [
      "activeTab",
      "tabs",
      "<all_urls>",
      "storage",
      "contextMenus",
      "webRequest",
      "webRequestBlocking"
    ]
  }
